<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:orientation="vertical"
    tools:context=".fragments.AddBuilding3Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_9"
        android:padding="@dimen/padding"
        android:text="Caretaker Details"
        android:textColor="@color/white"
        android:textSize="@dimen/text_large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_corner_round"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_small"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/txt_caretakername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_2"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:text="Phone Number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_small"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/txt_caretakerphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_2"
            android:inputType="phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_3"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_small"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/txt_caretakeremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_4"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btn_add_building3"
            android:layout_width="@dimen/btn_long_width"
            android:layout_height="@dimen/btn_long_height"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>