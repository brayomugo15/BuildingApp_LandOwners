<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_caretaker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_1"
            android:text="John Doe"
            android:textColor="@color/darkgreen"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Phone No"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_x_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_caretakeremail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="Email address"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_x_small"
                android:textStyle="bold" />
            <!--      Todo: visibility = false unless there's an email      -->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_1"
            android:paddingHorizontal="@dimen/padding">

            <TextView
                android:id="@+id/tv_caretaker_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="0712 345678"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_caretaker_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:text="name@email.com"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_small"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>