<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context=".fragments.SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_2"
        android:layout_marginBottom="@dimen/spacing_4"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="@dimen/text_x_large"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_baseline_settings_24"
        android:drawablePadding="@dimen/spacing_1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkgray"
        android:layout_marginTop="@dimen/spacing_1"
        android:layout_marginBottom="@dimen/spacing_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_1"
            android:paddingHorizontal="@dimen/spacing_2">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:paddingVertical="@dimen/padding_small"
                android:text="Edit Building details"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/text_medium_small"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/padding_small"
                android:src="@drawable/ic_baseline_arrow_forward_24" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darkgray" />

    </LinearLayout>

</LinearLayout>